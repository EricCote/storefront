{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Next.js: Launch Server",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/next/dist/bin/next",
			"args": ["dev"],
			"cwd": "${workspaceFolder}",
			"skipFiles": ["<node_internals>/**"],
			"env": {
				"NODE_OPTIONS": "--inspect"
			},
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"name": "Next.js: Attach to Server",
			"type": "node",
			"request": "attach",
			"skipFiles": ["<node_internals>/**"],
			"port": 9229,
			"restart": true,
			"localRoot": "${workspaceFolder}",
			"remoteRoot": "${workspaceFolder}"
		},
		{
			"name": "Next.js: Debug Chrome (launch)",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}",
			"sourceMapPathOverrides": {
				"webpack://_N_E/./*": "${workspaceFolder}/*",
				"webpack:///./*": "${workspaceFolder}/*"
			},
			"skipFiles": ["<node_internals>/**", "**/node_modules/**"]
		},
		{
			"name": "Next.js: Debug Chrome (Attach)",
			"type": "chrome",
			"request": "attach",
			"port": 9222,
			"webRoot": "${workspaceFolder}",
			"sourceMapPathOverrides": {
				"webpack://_N_E/./*": "${workspaceFolder}/*",
				"webpack:///./*": "${workspaceFolder}/*"
			},
			"skipFiles": ["<node_internals>/**", "**/node_modules/**"]
		}
	],
	"compounds": [
		{
			"name": "Next.js: Full-Stack Debug",
			"configurations": ["Next.js: Launch Server", "Next.js: Debug Client"],
			"stopAll": true,
			"preLaunchTask": "${command:typescript.restartTsServer}"
		}
	]
}
